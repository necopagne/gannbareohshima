<body>

  <h1>ビックリ箱のように画像が出てくるページ</h1>

  <!-- ボタン -->
  <button onclick="showImage()">できました！</button>

  <!-- 画像 -->
  <img id="surpriseImage" src="https://via.placeholder.com/300x200.png?text=ビックリ!" alt="Surprise Image">

  <script>
    // 画像を表示する関数
    function showImage() {
      var image = document.getElementById("surpriseImage");
      image.style.display = "block";  // 画像を表示
    }
  </script>

